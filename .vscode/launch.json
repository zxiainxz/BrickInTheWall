{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Z80 Debugger",
			"type": "dezog",
			"request": "launch",
			"remoteType": "zrcp",
			// "remoteType": "cspect",
			"zrcp": {
				"hostname": "localhost",
				"port": 10000
			},
			"cspect": {
				"hostname": "localhost",
				"port": 11000
			},
			"sjasmplus": [
				{
					"path": "${fileBasenameNoExtension}.sld",
				}
			],
			"commandsAfterLaunch": [
				"-LOGPOINT enable",  "-WPMEM enable", "-rmv"
			],
			"topOfStack": "Stack_Top",
			"rootFolder": "${fileDirname}",
			"listFiles": [
				{
					"path": "${fileBasenameNoExtension}.lst",
					"asm": "sjasmplus",
					"useFiles": true,
					"mainFile": "${fileBasenameNoExtension}.z80",
					"srcDirs": [ "lib" ]
				}
			],
			"disassemblerArgs": {
				"esxdosRst": true
			},
			// "load": "${fileBasenameNoExtension}.sna",
			"load": "main.sna",
			"skipInterrupt": false,
			"startAutomatically": true,
			"preLaunchTask": "sjasmplus"
		}
	]
}
